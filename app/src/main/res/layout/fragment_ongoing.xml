<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_ongoing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lee.myapplication.FragmentOngoing">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:orientation="horizontal"
            android:paddingLeft="1dp"
            android:paddingRight="0.5dp"
            android:paddingTop="0.5dp"
            android:id="@+id/Tb1"
            android:paddingBottom="9dp"
            android:paddingEnd="3dp">
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:layout_height="wrap_content"
                android:text="序号"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/work_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作名称"
                android:gravity="center"
                android:layout_toRightOf="@+id/number"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/current_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:text="当前环节"
                android:layout_toRightOf="@+id/work_name"
                android:layout_marginLeft="5dp"
                android:paddingBottom="9dp"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="9dp" />
            <TextView
                android:id="@+id/dealer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前处理人"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:layout_toRightOf="@+id/current_status"
                android:paddingBottom="9dp"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="9dp" />

            <TextView
                android:id="@+id/arrived_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到达时间"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:layout_toRightOf="@+id/dealer"
                android:paddingLeft="3dp"
                android:paddingRight="9dp"
                android:paddingBottom="9dp"
                android:paddingEnd="3dp" />
        </TableRow>
        <TableRow
            android:orientation="horizontal"
            android:paddingLeft="1dp"
            android:paddingRight="0.5dp"
            android:paddingTop="0.5dp"
            android:id="@+id/Tb2"
            android:paddingBottom="9dp"
            android:paddingEnd="3dp">
            <TextView
                android:id="@+id/number01"
                android:layout_width="1dp"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/work_name01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通费用报销"
                android:gravity="center"
                android:layout_toRightOf="@+id/number"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/current_status01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:text="单据审核"
                android:layout_toRightOf="@+id/work_name"
                android:layout_marginLeft="5dp"
                android:paddingBottom="9dp"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="9dp" />
            <TextView
                android:id="@+id/dealer01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张虹"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:layout_toRightOf="@+id/current_status"
                android:paddingBottom="9dp"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="9dp" />

            <TextView
                android:id="@+id/arrived_time01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/07/14 10:00"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:layout_toRightOf="@+id/dealer"
                android:paddingLeft="3dp"
                android:paddingRight="9dp"
                android:paddingBottom="9dp"
                android:paddingEnd="3dp" />
        </TableRow>

        <TableRow
            android:orientation="horizontal"
            android:paddingLeft="1dp"
            android:paddingRight="0.5dp"
            android:paddingTop="0.5dp"
            android:id="@+id/Tb3"
            android:paddingBottom="9dp"
            android:paddingEnd="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/number02"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/work_name02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通费用报销"
                android:gravity="center"
                android:layout_toRightOf="@+id/number"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/current_status02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:text="单据审核"
                android:layout_toRightOf="@+id/work_name"
                android:layout_marginLeft="5dp"
                android:paddingBottom="9dp"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="9dp" />
            <TextView
                android:id="@+id/dealer02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张虹"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:layout_toRightOf="@+id/current_status"
                android:paddingBottom="9dp"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="9dp" />

            <TextView
                android:id="@+id/arrived_time02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/07/15 10:00"
                android:gravity="center"
                android:layout_marginBottom="0.5dp"
                android:layout_toRightOf="@+id/dealer"
                android:paddingLeft="3dp"
                android:paddingRight="9dp"
                android:paddingBottom="9dp"
                android:paddingEnd="3dp" />
        </TableRow>
    </TableLayout>


</RelativeLayout>
