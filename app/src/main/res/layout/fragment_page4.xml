<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_listdetial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lee.myapplication.document_1">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="蔡如男"
        android:textColor="#7C7374"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="18573197193"
        android:textColor="#7C7374"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"  />
    <TextView
        android:text="runan.cai@huanuo-nokia.com"
        android:textColor="#7C7374"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"  />

    <ExpandableListView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7C7374"
        android:textSize="12dp"
        android:background="@drawable/phone_select"
        android:drawSelectorOnTop="false"
        android:layout_below="@+id/textView13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorText"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exit"
        android:text="退出登录"
        android:textSize="18dp"
        android:textColor="@color/colorMain"
        android:textAlignment="center"
        android:background="@drawable/login_background"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
