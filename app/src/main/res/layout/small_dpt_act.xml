<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apartment_item_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lee.myapplication.ApartmentItem">

   <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="通信录"
        android:textColor="#ffffff"
        android:background="#0e6fb7"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/phonepage"
       android:layout_alignParentTop="true"
       android:layout_alignParentStart="true" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorModule"
        android:id="@+id/line"
        android:layout_below="@+id/phonepage"
        android:layout_alignParentStart="true">

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/apart_recyclerview"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
