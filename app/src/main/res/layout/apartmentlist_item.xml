<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/touxiang"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蔡如男"
        android:textSize="12dp"
        android:textColor="#7b7273"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/item_image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_duty"
        android:layout_toRightOf="@+id/item_name"
        android:text="Radio1"
        android:textSize="12dp"
        android:textColor="#7b7273"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_number"
        android:layout_below="@+id/item_name"
        android:layout_toRightOf="@+id/item_image"
        android:text="18573197913"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/item_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="runan.cai@huanuo-nokia.com"
        android:layout_below="@+id/item_number"
        android:layout_toRightOf="@+id/item_image"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp" />
    <TextView
        android:id="@+id/item_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_email"
        android:layout_toRightOf="@+id/item_image"
        android:text="上海联通"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp" />
</RelativeLayout>