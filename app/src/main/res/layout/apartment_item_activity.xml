<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apartment_item_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lee.myapplication.ApartmentItem">

   <TextView
        android:background="@drawable/login_background"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="通信录"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/phonepage"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#cee7e6"
        android:id="@+id/search_detail"
        android:layout_below="@+id/phonepage" />
    <EditText
        android:id="@+id/search_frame"
        android:layout_width="341dp"
        android:layout_height="24dp"
        android:layout_below="@+id/phonepage"
        android:background="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp" />
    <ImageView
        android:layout_width="26dp"
        android:layout_height="22dp"
        android:id="@+id/searchjpg"
        android:background="@drawable/search"
        android:layout_below="@+id/phonepage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RSO"
        android:textSize="20dp"
        android:textColor="#969495"
        android:id="@+id/apartment_name"
        android:layout_below="@+id/searchjpg"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp" />
 <android.support.v7.widget.RecyclerView
     android:id="@+id/apart_recyclerview"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_below="@+id/apartment_name"
     android:layout_marginTop="2dp" />
</RelativeLayout>
