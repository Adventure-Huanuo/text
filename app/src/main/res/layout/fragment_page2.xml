<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phone_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/phone_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#0e6fb7"
        android:textSize="20dp"

        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:inputType="text"
        android:queryHint="请输入要搜索的姓名或工号" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:divider="#00000000"
        android:layout_below="@+id/searchView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@id/line"
        android:layout_below="@+id/searchView">
        <Button
            android:id="@+id/COM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Communication-Operation"
            android:textColor="@color/colorText1"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/phonelist"
            android:background="@drawable/phone_select"
            android:drawableRight="@mipmap/next"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
            android:textAlignment="textStart"
            android:drawablePadding="16dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:id="@+id/textView16"
            android:background="#A9A8A8" />
        <Button
            android:id="@+id/EPC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Management"
            android:textColor="@color/colorText1"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/phonelist"
            android:background="@drawable/phone_select"
            android:drawableRight="@mipmap/next"
            android:textAlignment="textStart"
            android:drawablePadding="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:id="@+id/textView17"
            android:background="#A9A8A8"/>
        <Button
            android:id="@+id/FC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EPC-Product Support"
            android:textColor="@color/colorText1"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/phonelist"
            android:background="@drawable/phone_select"
            android:drawableRight="@mipmap/next"
            android:textAlignment="textStart"
            android:drawablePadding="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:id="@+id/textView18"
            android:background="#A9A8A8"/>
        //实现图片与文字统一为按钮
        <Button
            android:id="@+id/GDC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Human-Resource"
            android:textColor="@color/colorText1"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/phonelist"
            android:background="@drawable/phone_select"
            android:drawableRight="@mipmap/next"
            android:textAlignment="textStart"
            android:drawablePadding="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
