            android:drawableRight="@mipmap/next"
            android:textAlignment="textStart"
            android:drawablePadding="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
