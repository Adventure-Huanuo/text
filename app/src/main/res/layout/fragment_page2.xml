<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phone_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/phone_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#0e6fb7"
        android:text="通信录"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/search_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/search"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp" />
    //EdittText全局显示，方便点击输入文字
    <EditText
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="48dp"
        android:textColor="#ffffff"
        android:hint="搜索"
        android:textSize="16sp"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:drawablePadding="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/phone_list"
        android:textColorHint="@color/colorMain"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@id/line"
        android:layout_below="@+id/search_text">
        <Button
            android:id="@+id/COM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Communication-Operation"
            android:textColor="@color/colorText1"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/phonelist"
            android:background="@drawable/phone_select"
            android:drawableRight="@mipmap/next"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
            android:textAlignment="textStart"
            android:drawablePadding="16dp"
            android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView16"
        android:background="#A9A8A8" />
    <Button
        android:id="@+id/EPC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project Management"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/phonelist"
        android:background="@drawable/phone_select"
        android:drawableRight="@mipmap/next"
        android:textAlignment="textStart"
        android:drawablePadding="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:layout_weight="1"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView17"
        android:background="#A9A8A8"/>
    <Button
        android:id="@+id/FC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EPC-Product Support"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/phonelist"
        android:background="@drawable/phone_select"
        android:drawableRight="@mipmap/next"
        android:textAlignment="textStart"
        android:drawablePadding="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView18"
        android:background="#A9A8A8"/>
    //实现图片与文字统一为按钮
    <Button
        android:id="@+id/GDC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Human-Resource"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/phonelist"
        android:background="@drawable/phone_select"
        android:drawableRight="@mipmap/next"
        android:textAlignment="textStart"
        android:drawablePadding="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:layout_weight="1"/>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView19"
         android:background="#A9A8A8"/>
    <Button
        android:id="@+id/GM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finance-Control"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/phonelist"
        android:background="@drawable/phone_select"
        android:drawableRight="@mipmap/next"
        android:textAlignment="textStart"
        android:drawablePadding="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:layout_weight="1"/>
       <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView20"
           android:background="#A9A8A8"/>
    //实现点击变颜色
    <Button
        android:id="@+id/HR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GM-Office"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/phonelist"
        android:background="@drawable/phone_select"
        android:drawableRight="@mipmap/next"
        android:textAlignment="textStart"
        android:drawablePadding="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView21"
        android:background="#A9A8A8"/>
    <Button
        android:id="@+id/Nokia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NM_SON"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/phonelist"
        android:background="@drawable/phone_select"
        android:drawableRight="@mipmap/next"
        android:textAlignment="textStart"
        android:drawablePadding="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView22"
        android:background="#A9A8A8"/>
    <Button
        android:id="@+id/NM_SON"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nokia"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/phonelist"
        android:background="@drawable/phone_select"
        android:drawableRight="@mipmap/next"
        android:textAlignment="textStart"
        android:drawablePadding="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView23"
        android:background="#A9A8A8"/>
    <Button
        android:id="@+id/PM_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SISD"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/phonelist"
        android:background="@drawable/phone_select"
        android:drawableRight="@mipmap/next"
        android:textAlignment="textStart"
        android:drawablePadding="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView24"
        android:background="#A9A8A8"/>
    <Button
        android:id="@+id/PM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GDC"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/phonelist"
        android:background="@drawable/phone_select"
        android:drawableRight="@mipmap/next"
        android:textAlignment="textStart"
        android:drawablePadding="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView25"
        android:background="#A9A8A8"/>
    <Button
        android:id="@+id/RSO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RSO"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/phonelist"
        android:background="@drawable/phone_select"
        android:drawableRight="@mipmap/next"
        android:textAlignment="textStart"
        android:drawablePadding="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView26"
        android:background="#A9A8A8"/>
    <Button
        android:id="@+id/SISD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PM"
        android:textColor="@color/colorText1"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/phonelist"
        android:background="@drawable/phone_select"
        android:drawableRight="@mipmap/next"
        android:textAlignment="textStart"
        android:drawablePadding="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:id="@+id/textView27"
        android:background="#A9A8A8"/>
    </LinearLayout>
</RelativeLayout>
